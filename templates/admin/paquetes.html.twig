{% extends 'backendBase.html.twig' %}

{% block content %}

    <div class="col-center-block">
        <table class="table table-sm table-bordered">
            <thead class="thead-dark">
            <tr>
                <th scope="col">Dias</th>
                <th scope="col">Noches</th>
                <th scope="col" colspan="3">Precio \n 1 persona 2 personas 3 o más</th>
                <th scope="col">Descripción</th>
                <th scope="col">No incluye</th>
                <th scope="col">Activo</th>
                <th scope="col">Actividades</th>
                <th scope="col">Editar</th>
                <th scope="col">Eliminar</th>
            </tr>
            </thead>
            <tbody>
            {% for c in paquetes %}
                <tr {% if c.active == false %} class="table-danger" {% endif %}>
                    <td>{{ c.diasDuracion }}</td>
                    <td>{{ c.nochesDuracion }}</td>
                    <td>{{ c.precio1 }}</td>
                    <td>{{ c.precio2 }}</td>
                    <td>{{ c.precio3 }}</td>
                    <td>{{ c.descripcion }}</td>
                    <td>{{ c.noIncluye }}</td>
                    <td>{{ c.active ? 'si' : 'no' }}</td>
                    <td><a title="Actividades" class="btn btn-default" href="{{ path('activities',{'id':c.id}) }}"><i
                                    class="fa fa-calendar" aria-hidden="true"></i><span
                                    class="caret"></span></a></td>
                    <td><a title="Editar" class="btn btn-default" href="{{ path('edit_paquete',{'id':c.id}) }}"><i
                                    class="fa fa-edit" aria-hidden="true"></i><span
                                    class="caret"></span></a></td>
                    <td><a title="Eliminar" class="btn btn-default" href="{{ path('delete_paquete',{'id':c.id}) }}"><i
                                    class="fa fa-trash" style="color: red" aria-hidden="true"></i><span
                                    class="caret"></span></a></td>
                </tr>
            {% else %}
                <th colspan="5">No se han insertado paquetes</th>
            {% endfor %}
            </tbody>
        </table>
        <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#createModal">
            Agregar
        </button>

    </div>
    <!-- Modal Create -->
    <div class="modal fade" id="createModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
         aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Nuevo Carro</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    {{ form_start(createForm) }}
                    {{ form_widget(createForm) }}
                    {{ form_end(createForm) }}
                </div>
            </div>
        </div>
    </div>
    <!-- Modal Edit -->
    {% if status == 'edit' %}
        <div class="modal fade" id="editModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
             aria-hidden="true">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="exampleModalLabel">Nuevo Carro</h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body">
                        {{ form_start(editForm) }}
                        {{ form_widget(editForm) }}
                        {{ form_end(editForm) }}
                    </div>
                </div>
            </div>
        </div>
    {% endif %}
    <input type="hidden" value="{{ status }}">
    <script>
        {% if status == 'edit' %}
        $('#editModal').modal('show')
        {% endif %}
    </script>
{% endblock %}