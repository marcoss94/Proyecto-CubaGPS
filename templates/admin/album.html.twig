{% block botonsubir %}

    {{ parent() }}

    <a class="scroll-to-top rounded" href="#" data-toggle="modal" data-target="#subirfotoModal">
        <i class="fas fa-angle-up"></i>
    </a>



    <div class="modal fade" id="subirfotoModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
         aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Subir Fotos</h5>
                    <button class="close" type="button" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">×</span>
                    </button>
                </div>
                <div class="modal-body">
                    {{ owner }}
                </div>
                <div class="modal-footer">
                    <button class="btn btn-secondary" type="button" data-dismiss="modal">Cancelar</button>
                    <a class="btn btn-primary" href="{{ path('security_logout') }}">Cerrar Sesión</a>
                </div>
            </div>
        </div>
    </div>

