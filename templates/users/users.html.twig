{% extends 'backendBase.html.twig' %}


{% block title %}Administración | Carros{% endblock %}


{% block stylesheets %}
    {{ parent() }}

{% endblock %}

{% block menu %}
    {{ parent() }}
{% endblock %}

{% block sidebar %}
    {{ parent() }}
{% endblock %}


{% block body %}

    <ol class="breadcrumb">
        <li class="breadcrumb-item">
            <a href="{{ path('admin') }}">Administración</a>
        </li>
        <li class="breadcrumb-item active">Usuarios</li>
    </ol>

    <div class="card mb-3">
        <div class="card-header">
            <div class="row">
                <div class="col-auto mr-auto">
                    <i class="fas fa-car"></i>
                    Usuarios
                </div>
            </div>

            {#<i class="fas fa-car"></i>#}
            {#Carros#}


            {#<button type="button" class="btn btn-primary " data-toggle="modal" data-target="#createModal">#}
            {#Agregar#}
            {#</button>#}
        </div>


        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                    <tr>
                        <th scope="col">Registrado</th>
                        <th scope="col">Username</th>
                        <th scope="col">Primer nombre</th>
                        <th scope="col">Segundo nombre</th>
                        <th scope="col">Email</th>
                        <th scope="col">Usuario de:</th>
                        <th scope="col">Roles</th>
                        <th scope="col">Asignar Rol</th>
                    </tr>
                    </thead>
                    <tfoot>
                    <tr>
                        <th scope="col">Registrado</th>
                        <th scope="col">Username</th>
                        <th scope="col">Primer nombre</th>
                        <th scope="col">Segundo nombre</th>
                        <th scope="col">Email</th>
                        <th scope="col">Usuario de:</th>
                        <th scope="col">Roles</th>
                        <th scope="col">Asignar Rol</th>
                    </tr>
                    </tfoot>
                    <tbody>
                    {% for c in users %}
                        <tr>
                            <td>{{ c.registeredAt|date }}</td>
                            <td>{{ c.username }}</td>
                            <td>{{ c.firstname }}</td>
                            <td>{{ c.lastname }}</td>
                            <td>{{ c.userOf=='google'?c.email:'' }}</td>
                            <td>{{ c.userOf }}</td>
                            <td>roles</td>
                            <td>poner asignar rol</td>
                        </tr>
                    {% else %}
                        <th colspan="5">No se han insertado carros</th>
                    {% endfor %}

                    </tbody>
                </table>
            </div>
        </div>
        <div class="card-footer">
            <div class="row">
                <div class="col-auto mr-auto">
                    <i class="fas fa-car"></i>
                    Usuarios
                </div>
            </div>

        </div>
    </div>
{% endblock %}
{% block script %}
    {{ parent() }}
{% endblock %}