    {#----------------Script para transfer----------------------- #}
    {% if object.transfer %}
        <script>
            $(document).ready(function () {
                $.ajax({
                    type: "POST",
                    url: "{{ path('ajax_get_lugares') }}",
                    success: function (response) {
                        var lugares = response.result;
                        var desde = document.getElementById('desdeReserveInput');
                        lugares.forEach(function (item) {
                            var desdeOption = document.createElement('option');
                            desdeOption.value = item['nombre'];
                            desdeOption.innerHTML = item['nombre'];
                            desde.appendChild(desdeOption);
                        });
                        desde.value = "lugar";
                    }
                })
                ;
                $('#hastaReserveInput').prop('disabled', true);
                $('#desdeReserveInput').change(function () {
                    var carId = {{ object.id }};
                    var desde = $('#desdeReserveInput').val();
                    $('#hastaReserveInput').prop('disabled', false);
                    var data = {carId: carId, desde: desde};
                    $.ajax({
                        type: "POST",
                        url: "{{ path('ajax_get_possible_destinations') }}",
                        data: data,
                        success: function (response) {
                            $('#hastaReserveInput')
                                .find('option')
                                .remove()
                                .end();
                            var lugares = response.result;
                            var hasta = document.getElementById('hastaReserveInput');
                            lugares.forEach(function (item) {
                                var hastaOption = document.createElement('option');
                                hastaOption.value = item;
                                hastaOption.innerHTML = item;
                                hasta.appendChild(hastaOption);
                                calculateTransferPrice();
                            });

                        }
                    })
                    ;
                });
                $('#hastaReserveInput').change(function () {
                    calculateTransferPrice()
                })
            });
            function calculateTransferPrice() {
                var desde = $('#desdeReserveInput').val();
                var hasta = $('#hastaReserveInput').val();
                if (hasta == null) {
                    return;
                }
                var precio ={{ object.precio }};
                var type ={{ object.transfer }};
                var data = {desde: desde, hasta: hasta, precio: precio, type: type};
                $.ajax({
                    type: "POST",
                    url: "{{ path('ajax_calculate_price') }}",
                    data: data,
                    success: function (response) {
                        var price = response.result;
                        $('#costoTransInput').val(price);
                        document.getElementById('precioTransfer').innerHTML = price + '€' ;
                    }
                })
                ;
            }
        </script>
