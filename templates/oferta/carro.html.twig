        <script>
            $(document).ready(function () {
                calculatePrice();
                $('#hastaReserveInput').change(function () {
                    calculatePrice();
                })
                $('#desdeReserveInput').change(function () {
                    calculatePrice();
                })
            });
            function calculatePrice() {
                var desde = parseInt($('#desdeReserveInput').val());
                var hasta = parseInt($('#hastaReserveInput').val());
                var price = parseInt({{ object.precio }});
                var totalPrice = (hasta - desde) * price;
                totalPrice = (totalPrice < 0) ? 0 : totalPrice;
                $('#costoExcInput').val(totalPrice);
                document.getElementById('precioTransfer').innerHTML = '€' + totalPrice;
            }
        </script>
