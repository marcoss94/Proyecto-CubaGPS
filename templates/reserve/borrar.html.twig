    <script type="text/javascript">
        function yyyymmdd() {
            var today = new Date();
            var now = new Date();
            now.setDate(today.getDate() + 4);
            var y = now.getFullYear();
            var m = now.getMonth() + 1;
            var d = now.getDate();
            var mm = m < 10 ? '0' + m : m;
            var dd = d < 10 ? '0' + d : d;
            return '' + y + '-' + mm + '-' + dd;
        }
        function yyyymmdd_salida() {
            var today = new Date();
            var now = new Date();
            now.setDate(today.getDate() + 5);
            var y = now.getFullYear();
            var m = now.getMonth() + 1;
            var d = now.getDate();
            var mm = m < 10 ? '0' + m : m;
            var dd = d < 10 ? '0' + d : d;
            return '' + y + '-' + mm + '-' + dd;
        }
        alert('asasas');
        $(document).ready(function () {
            alert('asasas');
            var message = {{ message }};
            if(message != 'none' ){
                alert({{ message }});
            }
            $('#inputEntrada').attr('min', yyyymmdd());
            $('#inputSalida').attr('min', yyyymmdd_salida());
            $('#inputEntrada').val(yyyymmdd());
            $('#inputSalida').val(yyyymmdd_salida());
        })

    </script>


